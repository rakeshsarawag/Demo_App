<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <ColumnListItem >
            <cells>
                <Text text="{path:'DeductionNumber'}" />
                <Text text="{ReturnAuthorizationNumber}" />
                <Text text="{parts : [{path : 'DateShipped'}], formatter : '.formatter.getDateInDDMMYYYY'}" />
                <Text text="{ShippingLocation}" />
                <!-- <Text text="{InvoiceTotal}" /> -->
                <Text text="{CarrierName}" />
                <Link text="{TrackingNumber}" press="onTrackingLinkPress"/>
                <Text text="{TotalDeductionAmount}" />
                <Button icon="sap-icon://show" type="Transparent" press="onPdfViewPress"/>
            </cells>
        </ColumnListItem>
</core:FragmentDefinition>