<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <ColumnListItem>
        <cells>
            <Text text="{InvoiceNumber}" />
            <Text text="{parts : [{path : 'InvoiceDate'}], formatter : '.formatter.getDateInDDMMYYYY'}" />
            <Text text="{InvoiceAmount}" />
            <Text text="{DiscountAmount}" />
            <Text text="{NetAmount}" />
            <Text text="{parts : [{path : 'DueDate'}], formatter : '.formatter.getDateInDDMMYYYY'}" />
            <Text text="{PoNumber}" />
            <Text text="{RaNumber}" />
        </cells>
    </ColumnListItem>
</core:FragmentDefinition>
